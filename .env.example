# Server
PORT=3000
NODE_ENV=development

# JWT
JWT_SECRET=please_change_me

# Secret storage (used to encrypt credentials saved via the admin UI)
# SECRET_ENCRYPTION_KEY takes precedence; falls back to ENCRYPTION_KEY when omitted.
SECRET_ENCRYPTION_KEY=replace_with_32_char_hex_value
SECRET_CACHE_TTL=300000

# Google OAuth
# Create a Web application OAuth client in Google Cloud Console and set its Client ID here
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com

# Database (Railway variables supported)
MYSQLHOST=localhost
MYSQLUSER=root
MYSQLPASSWORD=
MYSQLDATABASE=community_fortune
MYSQLPORT=3306

# Optional DB pool tuning
DB_POOL_MAX=10
DB_POOL_QUEUE=0

# Email (SMTP)
EMAIL_HOST=mail.technosophia.net
EMAIL_PORT=587
EMAIL_USER=PasswordReset@technosophia.net
EMAIL_PASSWORD=change_me
EMAIL_FROM="Community Fortune <PasswordReset@technosophia.net>"
SUPPORT_EMAIL=support@communityfortune.com

# Client URL (for email links/buttons)
CLIENT_URL=http://localhost:5173

# Cloudinary (File Uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
